<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:baselineAligned="false"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9">

        <androidx.cardview.widget.CardView
            android:id="@+id/ssucatchItemCard"
            android:layout_width="335dp"
            android:layout_height="126dp"
            android:layout_gravity="center"
            android:layout_margin="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ssucatch_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="15dp"
                    android:text="2024.01.03"
                    android:textColor="@color/blue02"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ssucatch_item_title"
                    android:layout_width="295dp"
                    android:layout_height="45dp"
                    android:layout_below="@id/ssucatch_item_date"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="제목"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="16dp"
                    android:src="@drawable/right_arrow" />

                <ImageView
                    android:id="@+id/ssucatch_star_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="178dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="31dp"
                    android:layout_marginBottom="85dp"
                    android:background="@drawable/unselected_star" />

                <TextView
                    android:id="@+id/ssucatchCategoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/bordered_box"
                    android:paddingStart="13dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="13dp"
                    android:paddingBottom="2dp"
                    android:text="장학"
                    android:textSize="13sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/ssucatchProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginBottom="13dp"
                    android:layout_toEndOf="@+id/ssucatchCategoryText"
                    android:background="@drawable/colored_box"
                    android:paddingStart="13dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="13dp"
                    android:paddingBottom="2dp"
                    android:text="진행"
                    android:textSize="13sp"
                    android:textColor="@color/white" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>